def comp_guess(n):
    low = 1
    high = n
    message = ''
    while message != 'c':
        if low != high:
            guess = random.randint(low, high)
        else:
            guess = low
        message = input(f"Is {guess} too high (h), too low (l), or correct (c)?").lower()
        if message == 'h':
            high = guess - 1
        elif message == 'l':
            low = guess + 1
    print(f"Congartulations, the computer has guessed {guess} correctly")

comp_guess(10)
